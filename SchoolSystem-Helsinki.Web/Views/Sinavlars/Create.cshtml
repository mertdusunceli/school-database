                                    @Html.DropDownList("ref_personel", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.ref_personel, "", new { @class = "text-danger" })
                                </div>
                            </div>                            
                            
                            <br />
                            <br />


                            <div class="form-group">
                                @Html.LabelFor(model => model.durum, htmlAttributes: new { @class = "control-label col-md-2" })
