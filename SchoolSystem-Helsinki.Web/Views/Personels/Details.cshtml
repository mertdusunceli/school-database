@model SchoolSystem_Helsinki.Web.Models.Personel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-sm-12 col-md-12">
    <div class="panel">
        <div class="panel-content">
            <div class="row">
                <div class="col-md-12">
                    <h5 class="mb-lg"><b>Details</b></h5>


                    <div class="table-responsive">
                        <table class="table table-striped table-hover table-bordered text-center">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.adi)</th>
                                    <th>@Html.DisplayNameFor(model => model.soyad)</th>
                                    <th>@Html.DisplayNameFor(model => model.yas)</th>
                                    <th>@Html.DisplayNameFor(model => model.mezun_tarih)</th>
                                    <th>@Html.DisplayNameFor(model => model.sinif)</th>
                                    <th>@Html.DisplayNameFor(model => model.Bolum.adi)</th>
                                    <th>@Html.DisplayNameFor(model => model.Okul.adi)</th>


                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Html.DisplayFor(model => model.adi)</td>
                                    <td>@Html.DisplayFor(model => model.soyad)</td>
                                    <td>@Html.DisplayFor(model => model.yas)</td>
                                    <td>@Html.DisplayFor(model => model.mezun_tarih)</td>
                                    <td>@Html.DisplayFor(model => model.sinif)</td>
                                    <td>@Html.DisplayFor(model => model.Bolum.adi)</td>
                                    <td>@Html.DisplayFor(model => model.Okul.adi)</td>

                                </tr>

                            </tbody>
                        </table>
                    </div>

                    <a href="@Url.Action("Edit", new { id = Model.id })" class="btn btn-primary">Edit</a>
                    <a href="@Url.Action("PersonnelList", "Home")" class="btn btn-wide">Back to List</a>



                </div>
            </div>
        </div>
    </div>
</div>