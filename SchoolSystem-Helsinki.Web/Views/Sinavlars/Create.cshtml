                            <br />
                            <br />





                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-8">
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                </div>
                            </div>


                            <a href="@Url.Action("ExamList", "Home")" class="btn btn-wide">Back to List</a>



                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


