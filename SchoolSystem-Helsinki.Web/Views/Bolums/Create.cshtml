@model SchoolSystem_Helsinki.Web.Models.Bolum

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using SchoolSystem_Helsinki.Web.Models;


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="col-sm-12 col-md-12">
        <div class="panel">
            <div class="panel-content">
                <div class="row">
                    <div class="col-md-12">
                        <form class="form-horizontal">
                            <h5 class="mb-lg"><b>Create</b></h5>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                            <div class="form-group">

                                @Html.LabelFor(model => model.adi, htmlAttributes: new { @class = "control-label col-md-2" })

                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.adi, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.adi, "", new { @class = "text-danger" })
                                </div>

                            </div>
                            <br />
                            <br />


                            <div class="form-group">
                                @Html.LabelFor(model => model.ref_Fakulte, "ref_Fakulte", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-8">
                                    @Html.DropDownList("ref_Fakulte", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.ref_Fakulte, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <br />
                            <br />

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-8">
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                </div>
                            </div>


                            <a href="@Url.Action("DepartmentList", "Home")" class="btn btn-wide">Back to List</a>



                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


}

