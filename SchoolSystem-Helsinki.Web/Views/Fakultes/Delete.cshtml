@model SchoolSystem_Helsinki.Web.Models.Fakulte

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-sm-12 col-md-12">
    <div class="panel">
        <div class="panel-content">
            <div class="row">
                <div class="col-md-12">
                    <h5 class="mb-lg"><b>Are you sure you want to delete this?</b></h5>


                    <div class="table-responsive">
                        <table class="table table-striped table-hover table-bordered text-center">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.fakulteAdi)</th>

                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Html.DisplayFor(model => model.fakulteAdi)</td>
                                </tr>

                            </tbody>
                        </table>
                    </div>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Delete" class="btn btn-primary" />
                            <a href="@Url.Action("FacultyList", "Home")" class="btn btn-wide">Back to List</a>
                        </div>
                    }



                </div>
            </div>
        </div>
    </div>
</div>



